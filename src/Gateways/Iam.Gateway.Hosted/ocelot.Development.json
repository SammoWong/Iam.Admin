{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9000"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/{url}",
      "UpstreamHttpMethod": [
        "Get",
        "Put",
        "Post",
        "Delete",
        "Options"
      ],

      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9100
        }
      ],

      "LoadBalancerOptions": {
        //LeastConnection C 将请求发往最空闲的那个服务器
        //RoundRobin C 轮流发送
        //NoLoadBalance C 总是发往第一个请求或者是服务发现
        //CookieStickySessions -性会话类型的负载平衡
        "Type": "RoundRobin"
      }
    }
  ]
}